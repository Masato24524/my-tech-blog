{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@splidejs/react-splide": [
        "./node_modules/@splidejs/react-splide/dist/types"
      ]
    },
    "baseUrl": "src"
  },
  "include": [
    "next-env.d.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/lib/github/posts.ts"
  ],
  "exclude": ["node_modules"]
}
